# Configuración de Base de Datos
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=factupicev2
DATABASE_PASSWORD=tu_contraseña_segura
DATABASE_NAME=factupicev2
DATABASE_SYNC=false
DATABASE_LOGGING=true

# Configuración de JWT
JWT_SECRET=tu_secreto_jwt_muy_largo_y_complejo
JWT_ACCESS_SECRET=tu_secreto_para_access_token
JWT_REFRESH_SECRET=tu_secreto_para_refresh_token
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Configuración de Entorno
NODE_ENV=development
PORT=3000

# Configuración de Seguridad
CORS_ORIGIN=http://localhost:4200
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=15*60*1000
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=30 # minutos
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_COMPLEXITY=true

# Configuración de MFA
MFA_ISSUER=FactuPiCe

# Configuración de Monitoreo con Prometheus
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_METRICS_PORT=9090

# Configuración de Registro
LOG_LEVEL=info
LOG_FILE=logs/application.log

# Configuración de Secretos
ENCRYPTION_KEY=tu_clave_de_encriptacion_de_32_caracteres
ENCRYPTION_IV=tu_vector_de_inicializacion_de_16_caracteres

# Configuración de Correo (Opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@gmail.com
SMTP_PASS=tu_contraseña_de_aplicacion

# Configuración de Integración (Opcional)
EXTERNAL_API_KEY=tu_api_key_externa
EXTERNAL_API_URL=https://api.ejemplo.com/v1
