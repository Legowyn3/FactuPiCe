{
  "name": "factupi-ce-backend",
  "version": "0.1.0",
  "description": "Backend para aplicaci贸n de facturaci贸n de aut贸nomos",
  "main": "src/main.ts",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm migration:generate -- -d typeorm.config.ts -n",
    "migration:run": "npm run typeorm migration:run -- -d typeorm.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d typeorm.config.ts"
  },
  "keywords": [
    "facturaci贸n",
    "autonomos",
    "nestjs"
  ],
  "author": "Tu Nombre",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "*",
    "@nestjs/config": "*",
    "@nestjs/core": "*",
    "@nestjs/jwt": "*",
    "@nestjs/passport": "*",
    "@nestjs/platform-express": "*",
    "@nestjs/typeorm": "*",
    "bcrypt": "*",
    "class-transformer": "*",
    "class-validator": "*",
    "jsonwebtoken": "*",
    "passport": "*",
    "passport-jwt": "*",
    "passport-local": "*",
    "pg": "*",
    "reflect-metadata": "*",
    "rxjs": "*",
    "typeorm": "*"
  },
  "devDependencies": {
    "@nestjs/cli": "*",
    "@nestjs/schematics": "*",
    "@nestjs/testing": "*",
    "@types/bcrypt": "*",
    "@types/express": "*",
    "@types/jest": "*",
    "@types/jsonwebtoken": "*",
    "@types/node": "*",
    "@types/passport-jwt": "*",
    "@types/supertest": "*",
    "jest": "*",
    "source-map-support": "*",
    "supertest": "*",
    "ts-jest": "*",
    "ts-loader": "*",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
